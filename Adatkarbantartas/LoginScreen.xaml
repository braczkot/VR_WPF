<Window x:Class="Adatkarbantartas.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adatkarbantartas"
        mc:Ignorable="d"
        Title="Login" Height="330" Width="330" FontSize="14" Background="DarkCyan">
    <Border Background="DarkSlateGray" CornerRadius="20" Margin="20">
    <StackPanel Margin="20">
        <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="E-mail" Foreground="White"/>
            <TextBox Name="txtEmail" Background="DarkGray" Foreground="White" FontSize="18"/>
            <Label Content="Password" Foreground="White"/>
            <PasswordBox Name="txtPassword" Background="DarkGray" Foreground="White" FontSize="18"/>
            <Button Name="btnSubmit" Content="Log In" Click="btnSubmit_Click" Background="DarkGray" Foreground="White" FontSize="18" Margin="60 10"/>
        </StackPanel>
</Border>
</Window>
